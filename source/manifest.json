{
  "name": "PuzzleBlocker",
  "version": "0.0.2",
  "description": "Solve puzzles to stop procrastinating on social media.",
  "homepage_url": "https://www.puzzleblocker.com",
  "manifest_version": 2,
  "minimum_chrome_version": "74",
  "applications": {
	"gecko": {
	  "id": "me@nkretschmer.com",
	  "strict_min_version": "67.0"
	}
  },
  "icons": {
	"128": "icon_128.png"
  },
  "browser_action": {
	"default_icon": "icon_128.png"
  },
  "permissions": [
	"storage",
	"alarms",
	"webNavigation",
	"tabs"
  ],
  "options_ui": {
	"chrome_style": true,
	"browser_style": true,
	"page": "options.html"
  },
  "background": {
	"persistent": false,
	"scripts": [
	 	"background.js"
	]
  }
}
